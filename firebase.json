{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "ignore": [
      "**/*.spec.js",
      "node_modules",
      "src"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "universal"
        }
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(css|js)",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "public, max-age=365000000, immutable"
        }]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
